<div class="container">
  <div class="row">
        <h1>投稿詳細画面</h1>
  </div>
  <div class="row">
    <div class="col-4">
      <%= render 'public/posts/form', post: @newpost %>
    </div>
    <div class="col-8">
      <div class="row">
        <div class="col-12">
          <%= image_tag @post.get_post_image(300,300) %>
        </div>
        <div class="row col-12">
          <div class="col-offset-5 col-2">
            <%= render 'public/posts/favorite', post: @post2 %>
          </div>
            <div class="col-5">
              <div class="row">
                <h2><%= @post.title %></h2>
              </div>
              <div class="row">
                <div class="col-10"><h6><%= @post.sentence %></h6></div>
              </div>
            </div>
        </div>
      </div>
      <div class="">
        <%= render 'public/posts/comment', post: @post, comment: @comment %>
      </div>
    </div>
  </div>
</div>