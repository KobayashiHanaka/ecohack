<div class="container">
  <div class="row">
        <h1>投稿詳細画面</h1>
  </div>
  <div class="row">
          <%= render 'public/posts/form', post: @post%>
        <table class="table">
                <tr>
                  <th><%= image_tag @post.get_post_image(100,100) %></th>
                  <th><%= render 'public/posts/favorite', post: @post2 %></th>
                  <th>title</th>
                  <th><%= @post.title %></th>
                </tr>
                <tr>
                  <th>Sentence</th>
                  <th><%= @post.sentence %></th>
                  <th><%= render 'public/posts/comment', post: @post, comment: @comment %></th>
                </tr>
        </table>
    </div>
</div>