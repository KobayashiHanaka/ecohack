<div class="col-md-8 offset-md-1">
  <div class="post-form">
    <%= form_with model: post, method: :post do |f| %>
      <div class="field">
        <%= f.file_field :post_image , placeholder:"投稿画像" , accept:"image/*" %>
      </div>
      <div class="field">
        <%= f.label :Title %><br>
        <%= f.text_field :title %>
      </div>
      <div class="field">
        <%= f.label :Sentence %><br>
        <%= f.text_area :sentence %>
      </div>
      <%= f.submit "Create" %>
    <% end %>
  </div>
</div>

