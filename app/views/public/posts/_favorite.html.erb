<% if post.favorited_by?(current_user) %>
  <%= link_to post_favorites_path(post), method: :delete do %>
    <i class="fas fa-heart" style="color:red; width:30px; height:30px; margin-right: 10px; "></i>
  <% end %>
  <div><%= post.favorites.count %></div>
<% else %>
  <%= link_to post_favorites_path(post), method: :post do %>
    <i class="far fa-heart" style="color:red; width:30px; height:30px;  margin-right: 10px;"></i>
  <% end %>
  <%= post.favorites.count %>
<% end %>