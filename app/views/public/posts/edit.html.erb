<div class="container">
    <div class="row">
        <h1>投稿編集画面</h1>
        <%= form_with model: @post , url: post_path(@post.id) do |f| %>
          <div class="field">
            <%= f.label :ニックネーム %>
            <%= f.text_field :name %>
          </div>
          <div class="field">
            <%= f.label :投稿画像 %>
            <%= f.file_field :post_image, placeholder: "投稿画像", accept: "image/*" %>
          </div>
          <div class="field">
            <%= f.label :自己紹介 %>
            <%= f.text_field :introduce %>
          </div>
          <%= f.submit "保存" %>
        <% end %>
    </div>
</div>