<div class="container">
  <div class="row">
    <h1>みんなのecohack</h1>
  </div>



  <div class="row">
    <div class="col-md-3">
      <%= render 'public/posts/form', post: @post %>
    </div>
    <div class="col-md-8 offset-md-1">
    <% @posts.each do |post| %>
      <%= image_tag post.get_post_image(100,100) %>
      <%= render 'public/posts/favorite', post: @post2 %>
