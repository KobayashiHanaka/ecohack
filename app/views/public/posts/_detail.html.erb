<div class="container">
    <div class="row"><h3>User info</h3></div>
      <table class="table">
        <tr>
          <th><%= image_tag user.get_profile_image(100,100) %></th>
        </tr>
        <tr>
          <th>ニックネーム</th>
          <th><%= user.name %></th>
        </tr>
        <tr>
          <th>自己紹介</th>
          <th><%= user.introduce %></th>
        </tr>
      </table>
    <div class="row">
      <% if user = current_user %>
        <%= link_to edit_user_path(user.id), class: "btn btn-outline-secondary btn-block" do %>
              <h4>編集</h4>
        <% end %>
      <% end %>
    </div>
</div>