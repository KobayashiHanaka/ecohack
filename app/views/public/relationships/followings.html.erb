<div class="wrapper">
    <div class="container">
      <div class="row">
        <h1>フォロー一覧</h1>
      </div>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th></th>
              <th>ニックネーム</th>
              <th>自己紹介</th>
              <th></th>
            </tr>
          </thead>
          <% @users.each do |user|%>
          <tbody>
            <tr>
              <td><%= image_tag user.get_profile_image(100,100)%></td>
              <td>
                <%= link_to user_path(user) do %>
                  <h2><%= user.name %></h2>
                <% end %>
              </td>
              <td><%= user.introduce %></td>
              <% if current_user.following?(user) %>
                <td><%= link_to "フォローをやめる", user_relationships_path(user.id), method: :delete %></td>
              <% end %>
            </tr>
          </tbody>
          <% end %>
        </table>
    </div>
</div>