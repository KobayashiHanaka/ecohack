<div class="container">
  <div class="row">
    <h1>会員一覧画面</h1>
  </div>
  <div class="row">
    <% @users.each do |user|%>
        <div class="col-3">
          <%= image_tag user.get_profile_image(200,200) %>
        </div>
        <div class="col-3">
          <div class="row font-weight-bold">ニックネーム</div>
          <div class="row">
            <%= link_to user_path(user) do %>
             <%= user.name %>
            <% end %>
          </div>
          <div class="row">
            <% if user!=current_user %>
              <% if current_user.following?(user) %>
                <%= link_to "フォローをやめる", user_relationships_path(user.id), method: :delete %>
              <% else %>
                <%= link_to "フォローする", user_relationships_path(user.id), method: :post %>
              <% end %>
            <% end %>
          </div>
        </div>
      <% end %>
  </div>
</div>