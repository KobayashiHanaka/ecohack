<div class="container">
  <div class="row">
    <h1>会員詳細画面</h1>
  </div>
  <div class="row">
    <%=image_tag @user.get_profile_image(100,100) %>
    <%= @user.name %>
    <%= @user.introduce %>
  <%= link_to "編集する", edit_user_path(@user) %>
  <% if current_user.following?(@user) %>
          <%= link_to "フォローをやめる", user_relationships_path(@user.id), method: :delete %>
        <% else %>
          <%= link_to "フォローする", user_relationships_path(@user.id), method: :post %>
  <% end %>
  </div>
  <%= link_to "いいね一覧", favorites_user_path(@user) %>
  <%= link_to "フォロー一覧", following_user_path(@user) %>
  <%= link_to "フォロワー一覧", followers_user_path(@user) %>
</div>