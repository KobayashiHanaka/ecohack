<div class="container">
  <div class="row">
    <h1>会員詳細画面</h1>
  </div>
  <div class="row">
    <div class="col-6 my-3">
      <%=image_tag @user.get_profile_image(300,300) %>
    </div>
    <div class="col-6">
      <div class="row font-weight-bold">ニックネーム</div>
      <div class="row">
        <%= @user.name %>
      </div>
      <div class="row font-weight-bold">自己紹介</div>
      <div class="row">
        <%= @user.introduce %>
      </div>
        <% if @user==current_user %>
          <div class="row" style="margin-top: 20px; display: block;">
            <%= link_to "編集する", edit_user_path(@user), class:"btn btn-outline-secondary" %>
          </div>
        <% end %>
      <div class="row" style="margin-top: 20px; display: block;">
        <% if @user!=current_user %>
          <% if current_user.following?(@user) %>
            <%= link_to "フォローをやめる", user_relationships_path(@user.id), method: :delete, class:"btn btn-outline-secondary" %>
          <% else %>
            <%= link_to "フォローする", user_relationships_path(@user.id), method: :post, class:"btn btn-outline-secondary" %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-2"><%= link_to "いいね一覧", user_favorites_path(@user), class:"btn btn-outline-secondary" %></div>
    <div class="col-2"><%= link_to "フォロー一覧", user_followings_path(@user), class:"btn btn-outline-secondary" %></div>
    <div class="col-3"><%= link_to "フォロワー一覧", user_followers_path(@user), class:"btn btn-outline-secondary" %></div>
  </div>
</div>