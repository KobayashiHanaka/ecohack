<div class="container">
  <div class="row">
    <h1>会員情報編集画面</h1>
  </div>
  <div class="row">
    <%= form_with model: @user, url: user_path(@user) do |f| %>
      <div class="field">
        <%= f.label :profile_image %>
        <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
      </div>
      <div class="field">
        <%= f.label :ニックネーム %>
        <%= f.text_field :name, autofocus:true %>
      </div>
      <div class="field">
        <%= f.label :自己紹介 %>
        <%= f.text_field :introduce %>
      </div>
      <%= f.submit "Up date" %>
    <% end %>
  </div>
</div>
